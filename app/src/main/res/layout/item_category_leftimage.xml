<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/backgroundColor"
    android:background="#C3E4A7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:padding="16dp"
        android:src="@drawable/grammar1"
        android:id="@+id/imageCat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/app_name"
        android:textColor="#0000ff"
        android:textSize="28sp"
        android:id="@+id/textTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textDesc"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/imageCat"
        app:layout_constraintTop_toTopOf="@id/imageCat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:text="@string/app_name"
        android:id="@+id/textDesc"
        android:layout_marginTop="4dp"
        android:textColor="#0000ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/textTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>