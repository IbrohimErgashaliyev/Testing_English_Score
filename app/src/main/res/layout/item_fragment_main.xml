<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorBackground"
        android:background="#fa1"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/image_profile"
            android:id="@+id/imageCategory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:layout_marginRight="8dp"
            android:id="@+id/buttonLiked"
            android:padding="6dp"
            android:background="?android:selectableItemBackgroundBorderless"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:textStyle="bold"
            android:textColor="@color/colorTextCategory"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:layout_marginLeft="12dp"
            android:id="@+id/textTitle"
            app:layout_constraintBottom_toTopOf="@id/textDesc"
            app:layout_constraintTop_toTopOf="@id/imageCategory"
            app:layout_constraintLeft_toRightOf="@id/imageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/colorTextCategory"
            android:layout_marginTop="4dp"
            android:text="@string/app_name"
            android:id="@+id/textDesc"
            app:layout_constraintLeft_toLeftOf="@id/textTitle"
            app:layout_constraintBottom_toBottomOf="@id/imageCategory"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/bottomView1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@id/bottomView2"
            app:layout_constraintLeft_toRightOf="@id/imageCategory"
            app:layout_constraintTop_toBottomOf="@id/imageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorTextCategory"
                android:id="@+id/textBeingTime"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/colorTextCategory"
                android:text="being time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomView2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintRight_toLeftOf="@id/bottomView3"
            app:layout_constraintTop_toTopOf="@id/bottomView1"
            app:layout_constraintLeft_toRightOf="@id/bottomView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorTextCategory"
                android:id="@+id/textScore"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/colorTextCategory"
                android:text="Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomView3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintRight_toLeftOf="@id/viewContents"
            app:layout_constraintTop_toTopOf="@id/bottomView1"
            app:layout_constraintLeft_toRightOf="@id/bottomView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorTextCategory"
                android:id="@+id/textScore1"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/colorTextCategory"
                android:text="Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintVertical_bias="0.4"
            android:id="@+id/viewContents"
            android:gravity="center_horizontal"
            app:layout_constraintRight_toRightOf="@id/buttonLiked"
            app:layout_constraintLeft_toLeftOf="@id/buttonLiked"
            app:layout_constraintTop_toBottomOf="@id/buttonLiked"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textContent"
                android:textSize="20sp"
                android:textColor="@color/colorTextCategory"
                android:text="23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorTextCategory"
                android:text="Lessons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>