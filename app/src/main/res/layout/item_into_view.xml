<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f41"
    android:id="@+id/colorBackground"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/colorPrimary"
        android:padding="8dp"
        app:civ_border_width="4dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/imageInto"
        app:layout_constraintBottom_toTopOf="@id/textTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="240dp"
        android:layout_height="240dp"/>
    <TextView
        android:layout_marginHorizontal="48dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="Salom"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="24dp"
        android:id="@+id/textTitle"
        app:layout_constraintBottom_toTopOf="@id/textDesc"
        app:layout_constraintTop_toBottomOf="@id/imageInto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#fff"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:text="content of description here and you can get information about the app"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/textDesc"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>