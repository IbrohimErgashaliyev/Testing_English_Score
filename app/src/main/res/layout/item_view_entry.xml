<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="false"
    android:elevation="2dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backColor"
        android:background="#E924263B"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageStar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->

        <FrameLayout
            android:id="@+id/frameImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/backColorCircle"
                android:src="@drawable/back_color"
                android:layout_width="64dp"
                android:layout_height="64dp"/>

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_ielts_graduation"
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <TextView
            android:textColor="#fff"
            android:text="English"
            android:textSize="16sp"
            android:id="@+id/textName"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/frameImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>